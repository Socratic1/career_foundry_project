<tr>
  <td class="field-label col-md-3 active">
    <label><%= link_to product.name, product %></label>
  </td>
  <td class="col-md-3"><%= product.description %></td>
  <td class="col-md-2"><%= '%.2f' % (product.amount/100.00) %></td>
  <td class="col-md-2"><%= product.colour %></td>
  <td><%= link_to 'Edit', edit_product_path(product) %></td>
  <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
