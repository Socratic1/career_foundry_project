<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  <div class="field">
    <%= f.label :colour %><br>
    <%= f.select(
        :colour, 
        options_for_select([['', 1],['Red', 2],['Green', 3],['Blue', 4], ['Orange', 5]]),
        {},
        :class => "chosen-select",
        data_placeholder: "Pick a color... ") %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
