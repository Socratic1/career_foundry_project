<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <%= image_tag(@product.image_url) %>
</p>

<p>
  <strong>Colour:</strong>
  <%= @product.colour %>
</p>

<% if signed_in? %>
	<h4>Add a review</h4>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p>
			<%= f.label :body, "Comments" %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<div class="rating"></div>
		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>

<div class="average-rating">
	<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
</div>

<div class="product-reviews">
	<% @comments.each do |comment| %>
		<div class="row">
			<hr>
			<p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
			<div class="rated" data-score="<%= comment.rating %>"></div>			
			<p><%= comment.body %></p>
		</div>
	<% end %>
	<%= will_paginate @comments %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
