<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
  // This identifies your website in the createToken call below
  Stripe.setPublishableKey("#{Rails.configuration.stripe[:publishable_key]}");
  // ...
</script>

<h1>Thank you for using our services.</h1>

<p>
	You (<%= @order.user.email %>) have ordered the <%= @order.product.name %>.
</p>

<div class="order_info">
  <p>
    <strong>Name:</strong>
    <%= @order.product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @order.product.description %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @order.product.colour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= '%.2f' % (@order.product.amount/100.00) %>
  </p>
 </div>


<%= form_for(@order) do |f| %>
  <%= hidden_field_tag :product_id, @order.product.id %>
  <%= hidden_field_tag :customer_id, @customer.id %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', product_path(@order.product) %>